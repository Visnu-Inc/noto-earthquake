{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true, 
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist",
    "build"
  ]
}
